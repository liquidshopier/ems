{
  "name": "local-ems",
  "version": "1.0.0",
  "description": "Enterprise Management System",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:5000/api/health http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:electron": "npm run build:frontend && npm run build:backend && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "build:electron:win": "npm run build:frontend && npm run build:backend && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --dir",
    "build:electron:installer": "npm run build:frontend && npm run build:backend && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "build:electron:mac": "npm run build:frontend && electron-builder --mac",
    "build:electron:linux": "npm run build:frontend && electron-builder --linux",
    "dist": "npm run build:electron"
  },
  "keywords": ["ems", "enterprise", "management", "system"],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.ems.app",
    "productName": "EMS - Enterprise Management System",
    "extends": null,
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/backend.exe",
        "to": "backend/backend.exe"
      },
      {
        "from": "backend/database",
        "to": "backend/database"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "publish": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "pkg": "^5.8.1",
    "wait-on": "^9.0.3"
  }
}
