{
  "name": "ems-backend",
  "version": "1.0.0",
  "description": "Backend for EMS",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "pkg . --targets node18-win-x64 --output backend.exe"
  },
  "pkg": {
    "assets": [
      "database/**/*",
      "config/**/*",
      "routes/**/*",
      "middleware/**/*",
      "utils/**/*",
      "node_modules/sqlite3/lib/binding/**/*.node",
      "node_modules/sqlite3/build/**/*.node"
    ],
    "scripts": [
      "config/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js"
    ],
    "outputPath": "."
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  }
}
